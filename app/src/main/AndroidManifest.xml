<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.w4eret1ckrtb1tch.moviereviews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@drawable/ic_movie_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_movie_icon"
        android:supportsRtl="false"
        android:theme="@style/Theme.MovieReviews">

        <activity
            android:name=".presentation.activity.SplashScreen"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".presentation.activity.MainActivity"
            android:exported="true" />

    </application>

</manifest>